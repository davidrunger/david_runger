- content_for(:extra_css) do
  :css
    button.google-login {
      background: none;
      color: inherit;
      border: none;
      padding: 0;
      font: inherit;
      cursor: pointer;
      outline: inherit;
    }

.py-16.text-center
  = form_tag("/auth/google_oauth2?redirect_uri=#{url_base}/users/auth/google_oauth2/callback") do
    = button_tag(image_tag('google-login.png', alt: 'Log in with Google'), type: :submit, class: 'google-login')
  %div
    or go to the
    #{link_to('home page', root_path)}.
