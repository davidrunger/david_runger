<!DOCTYPE html>
<html>
  <head>
    <% if Rails.env.production? %>
      <%= render 'layouts/rollbar' %>
    <% end %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= @title.present? ? "#{@title} - " : '' %>David Runger</title>
    <%= csrf_meta_tags %>
    <script type="text/javascript">
      window.davidrunger || (window.davidrunger = {})
      window.davidrunger.bootstrap = JSON.parse("<%= raw(escape_javascript((@bootstrap_data || {}).to_json)) %>")
    </script>
    <% if webpack_dev_server_present? %>
      <%= javascript_pack_tag 'application' %>
      <%= javascript_pack_tag 'styles' %>
    <% else %>
      <%= javascript_include_tag '/packs/application' %>
      <%= stylesheet_link_tag 'application', media: 'all' %>
    <% end %>
    <%= content_for :extra_javascript %>
  </head>

  <body>
    <% if notice.present? %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
