{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleDetection": "force",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "paths": {
      "@/*": ["./app/javascript/*"],
      "css/*": ["./app/assets/stylesheets/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "types": ["vite/client", "vitest/globals"]
  },
  "vueCompilerOptions": {
    "plugins": ["@vue/language-plugin-pug"]
  },
  "include": [
    "app/javascript/**/*.ts",
    "app/javascript/**/*.vue"
  ]
}
