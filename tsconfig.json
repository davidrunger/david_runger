{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./app/javascript/*"],
      "css/*": ["./app/assets/stylesheets/*"]
    }
  },
  "vueCompilerOptions": {
    "plugins": ["@vue/language-plugin-pug"]
  },
  "include": [
    "app/javascript/**/*.ts",
    "app/javascript/**/*.d.ts",
    "app/javascript/**/*.vue"
  ]
}
